{
  "version": 2,
  "env": {
    "GEMINI_API_KEY": "@gemini-api-key",
    "GOOGLE_AI_API_KEY": "@gemini-api-key-backup",
    "GENERATIVE_AI_KEY": "@gemini-api-key-fallback",
    "NODE_ENV": "production",
    "ENABLE_API_KEY_VALIDATION": "true",
    "ENABLE_RATE_LIMITING": "true"
  },
  "functions": {
    "api/generate-blog.js": {
      "maxDuration": 30,
      "memory": 512
    },
    "api/post-to-twitter.js": {
      "maxDuration": 60,
      "memory": 1024
    },
    "api/blogs.js": {
      "maxDuration": 10,
      "memory": 256
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options", 
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Cache-Control",
          "value": "no-store, no-cache, must-revalidate"
        }
      ]
    }
  ]
}
